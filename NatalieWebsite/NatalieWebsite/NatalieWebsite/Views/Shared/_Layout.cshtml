<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/themeCss")
</head>
<body>
    <header id="header">
        <div class="logo"><a href="index.html">Handmade <span>by Natalie</span></a></div>
        <a href="#menu"><span>Menu</span></a>
    </header>

    <nav id="menu">
        <ul class="links">
            <li><a>@Html.ActionLink("Home", "Index", "Home")</a></li>
            <li><a>@Html.ActionLink("About", "About", "Home")</a></li>
            <li><a>@Html.ActionLink("Contact", "Contact", "Home")</a></li>
        </ul>
    </nav>

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - George Feighan</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/themeJs")
    @RenderSection("scripts", required: false)
</body>
</html>
